algoritmo "Aula 03 - Exercício 02"
var
   num1, num2: Inteiro
   media: Real

inicio
      Escreva("Digite um número: ")
      Leia(num1)
      Escreva("Digite outro: ")
      Leia(num2)
      
      media <- (num1 + num2) / 2
      
      Escreval("A média entre", num1, " e", num2, " é igual a", media, ".")
fimalgoritmo

